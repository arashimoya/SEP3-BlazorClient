@code {
  private Hall hall;
  [Parameter] public EventCallback<Tuple<int, int>> OnClick { get; set; }

  private bool IsSelected { get; set; } = false;
  private IList<string> selectColor;



  protected override async Task OnInitializedAsync() 
  {
      selectColor = new List<string>();
      Seed();
    

  }
    
  
    private void Seed()
    {
      hall = new Hall(1);
      for (int i = 0; i < hall.Seats.Count; i++)
      {
        selectColor.Add("");
      }
    }

  private void ChangeColor(int index)
  {
    if (selectColor[index] == "")
    {
      selectColor[index] = "selected";
    }
    else
    {
      selectColor[index] = "";
    }
  }

  void SelectSeat(int index)
  {
    OnClick.InvokeAsync(hall.Seats[index]);
    ChangeColor(index);
  }

    

    

