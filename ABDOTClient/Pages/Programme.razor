    protected async override Task OnInitializedAsync(){
        ClientFactory.GetClient();
    }

    IList<Item> items = new List<Item>
    {
        new Item
        {
            Source = "/images/ralf-rangnick.png",
            Alt = "First Slide",
            Caption = "Ralf Rangnick appointed as Manchester United Manager",
            Header = "Welcome Ralf!",
        },
        new Item
        {
            Source = "/images/ole_sacked.png",
            Alt = "Second Slide",
            Caption = "Bye Ole!",
            Header = "He got the sack",
        },
        new Item
        {
            Source = "/images/siu_manu.png",
            Alt = "Third Slide",
            Caption = "Every SIUUU in one article",
            Header = "Random urge to shout SIUUUUUU",
        },
        new Item
        {
            Source = "/images/ballon-dor.png",
            Alt = "Third Slide",
