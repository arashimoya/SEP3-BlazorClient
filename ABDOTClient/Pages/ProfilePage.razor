@page "/profile/"
@using ABDOTClient.Model
@using ABDOTClient.Data
@using ABDOTClient.Authentication
@inject IUserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
<style>
    .profile-pic{
    width: 50%;
    height: auto;
    border-radius: 50%;
    padding: 10px;
    }
    
    
    .profile-header{
    background: rgb(27,152,134);
    background: linear-gradient(90deg, rgba(27,152,134,1) 21%, rgba(7,196,197,1) 59%, rgba(48,232,255,1) 100%);
    align-content: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    align-items: center;
   
    }
    
    .profile-title {
        font-weight: 700;
    }
    .profile-info {}
    
    .profile-title, .profile-info {
        margin-top:  0.25em;
    }
    
    .profile-section {
        padding-top:  40px;
        margin-bottom: 10px;
        
        font-weight:700;
        font-size: 1.625rem;
    }
    
    .profile-body {
        padding-bottom: 15px;
        }
        
    .shadow-container {
    box-shadow: 0 0 0.5em 0 black;
    margin:40px 0 40px 0;
    }
    
    .shadow-container::before{
    }
    
    

</style>
<div class="container">
    <div class="row shadow-container" >
        <div class="profile-header col-lg-3 col-md-12" >
            
            <img class="profile-pic" src="images/prof-pic.svg" alt="prof-pic"/>
            <div class="profile-name">
                <text>@user.FirstName @user.LastName</text>
            </div>
            <button @onclick="@(() => Edit(user.Id))">
                <i class="oi oi-pencil" style="color:white"/>
            </button>
            
        </div>
        <div class="col-lg-9 col-md-12 profile-body">
            <div class="row">
                <div class="col-12 separator profile-section">
                    Information
                </div>
                <div class="col-6 profile-title">
                    Email
                </div>
                <div class="col-6 profile-title">
                    Password
                </div>
            </div>
            <div class="row">
                <div class="col-6 profile-info">
                    @user.Email
                </div>
                <div class="col-6 profile-info">
                    <span class="password"> @user.Password</span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 separator profile-section">
                    Address
                </div>
                <div class="col-6 profile-title">
                    Street and house number
                </div>
                <div class="col-6 profile-title">
                    City
                </div>
            </div>
            <div class="row">
                <div class="col-6 profile-info">
                    @user.Street
                </div>
                <div class="col-6 profile-info">
                    @user.Settlement
                </div>
            </div>
            <div class="row">
                <div class="col-6 profile-title">
                    Postcode
                </div>
                <div class="col-6 profile-title">
                    Country
                </div>
            </div>
            <div class="row">
                <div class="col-6 profile-info">
                    @user.Postcode
                </div>
                <div class="col-6 profile-info">
                    @user.Country
                </div>
            </div>
            
        </div>
    </div>
    <div class="row shadow-container" style="width: 100%; height: 361px;">
        ideas?
    </div>
    <div class="row shadow-container" style="width: 100%; height: 361px;">
            
    </div>
    
</div>


@code {
    private User user;
    [Parameter] public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        user = await UserService.GetUser(Id);
    }

    private void Edit(int id)
    {
        NavigationManager.NavigateTo($"EditUser/{id}");
    }

}